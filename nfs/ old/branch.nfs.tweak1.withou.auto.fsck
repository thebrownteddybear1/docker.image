#!/bin/bash
while true; do
  clear
  echo "--- THREADS: $(pgrep nfsd | wc -l) | LOAD: $(uptime | awk -F'load average:' '{print $2}') ---"
  echo "--- RAM BUFFER (TARGET 40GB) ---"
  grep -E "Dirty|Writeback" /proc/meminfo | awk '{printf "%s %.2f GB / 40.00 GB\n", $1, $2/1048576}'
  echo "--- READ CACHE (AGGRESSIVE) ---"
  grep "Cached:" /proc/meminfo | awk '{printf "Total Cached: %.2f GB\n", $2/1048576}'
  echo "--- NVMe DISK THROUGHPUT ---"
  iostat -d -m 1 1 | grep -E "sd[b-d]" | awk '{print $1 " R:" $3 "MB/s W:" $4 "MB/s"}'
  sleep 1
done
