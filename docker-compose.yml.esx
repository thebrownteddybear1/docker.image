version: '3.8'

services:
  esx:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: esx-container
    network_mode: "host"
    restart: unless-stopped
    environment:
      - GITHUB_TOKEN=${GITHUB_TOKEN:-} # Pass this from your host env if needed
    stdin_open: true # Equivalent to -i
    tty: true        # Equivalent to -t